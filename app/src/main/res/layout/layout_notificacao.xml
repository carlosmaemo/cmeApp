<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ddd"
    android:padding="5dp"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/layout_notificacao_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="#ccc"
        android:textAllCaps="true"
        android:text="Titulo"
        android:textSize="20sp"
        tools:textColor="@android:color/black" />

    <TextView
        android:id="@+id/layout_notificacao_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/layout_notificacao_titulo"
        android:layout_alignStart="@+id/layout_notificacao_titulo"
        android:layout_alignLeft="@+id/layout_notificacao_titulo"
        android:layout_alignEnd="@+id/layout_notificacao_titulo"
        android:layout_alignRight="@+id/layout_notificacao_titulo"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center|left"
        android:text="DescriÃ§ao"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/layout_notificacao_ignorar"
        style="?android:borderlessButtonStyle"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_notificacao_descricao"
        android:layout_alignTop="@+id/layout_notificacao_titulo"
        android:layout_alignEnd="@+id/layout_notificacao_titulo"
        android:layout_alignRight="@+id/layout_notificacao_titulo"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/ic_cancelar"
        tools:ignore="VectorDrawableCompat" />

</RelativeLayout>